{
  "name": "webpack-omit-js-for-css-plugin",
  "version": "0.1.0",
  "description": "This Webpack plugin will omit the JS files, for CSS only dependencies, that become obsolete once extract-text-plugin extracts all inlined CSS into its own .css file",
  "main": "src/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "mocha --timeout 10000 test/*.test.js",
    "watch:test": "mocha --timeout 10000 --watch test/*.test.js",
    "test:cover" : "nyc npm run test",
    "cover:lcovonly": "nyc report --reporter=lcovonly"
  },
  "keywords": [
    "webpack",
    "plugin",
    "extract-text-plugin",
    "omit-js-for-css-plugin",
    "omit js",
    "webpack omit",
    "css"
  ],
  "author": "Jessica Silva",
  "license": "MIT",
  "peerDependencies": {
    "extract-text-webpack-plugin": "^2.1.0",
    "webpack": "^2.2.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "css-loader": "^0.27.3",
    "extract-text-webpack-plugin": "^2.1.0",
    "mocha": "^3.2.0",
    "nyc": "^10.2.0",
    "rimraf": "^2.6.1",
    "style-loader": "^0.13.2",
    "test-console": "^1.0.0",
    "webpack": "^2.3.3"
  },
  "dependencies": {
    "chalk": "^1.1.3"
  },
  "nyc": {
    "include": [
      "src/**.js"
    ],
    "reporter" : [
      "text",
      "lcov"
    ],
    "check-coverage": true,
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "statements": 100
  }
}
